{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2021",
    "baseUrl": "bouquet",
    "experimentalDecorators": true,
    "strict": true,
    "allowImportingTsExtensions": true
  },
  "include": ["bouquet/**/*.ts"],
  "exclude": ["node_modules", "bouquet/**/*.spec.ts"]
}
